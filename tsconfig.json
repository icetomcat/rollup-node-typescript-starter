{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["ES6", "es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "rootDir": "./src",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}